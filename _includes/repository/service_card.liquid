{% assign service = include.service %}

<div class="repo p-2 text-center">
  <div class="card h-100">
    <div class="card-body d-flex flex-column">
      {% if service.icon %}
        <div class="mb-3">
          <i class="{{ service.icon }} fa-3x text-primary"></i>
        </div>
      {% endif %}

      <h5 class="card-title">{{ service.name }}</h5>

      {% if service.description %}
        <p class="card-text text-muted flex-grow-1">{{ service.description }}</p>
      {% endif %}

      <div class="mt-auto">
        <a href="{{ service.url }}" class="btn btn-outline-primary btn-sm" target="_blank" rel="noopener noreferrer">
          <i class="fas fa-external-link-alt me-1"></i>Visit
        </a>
      </div>
    </div>
  </div>
</div>
